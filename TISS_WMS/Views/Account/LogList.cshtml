@model IEnumerable<TISS_WMS.Models.Logs>

@{
    ViewBag.Title = "日誌記錄";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-3">日誌記錄</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>用戶 ID</th>
                    <th>用戶操作</th>
                    <th>詳情</th>
                    <th>時間</th>
                    <th>IP 地址</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.UserId</td>
                        <td>@log.UserAction</td>
                        <td>@log.Details</td>
                        <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>@log.IPAddress</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>