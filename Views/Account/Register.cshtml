@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>帳號註冊</title>
    <link rel="icon" href="~/Img/favicon.svg" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.js"></script>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #1A2A4F;
        }

        .register-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="text-center">
            <img src="~/pic/logo.svg" alt="Logo" style="height: 45px; width: 100%;">
        </div>
        <!-- 開始註冊表單 -->
        <form action="/Account/Register" method="post">
            @Html.AntiForgeryToken() <!-- 防止CSRF攻擊 -->

            <div class="form-group">
                <label for="UserAccount">帳號</label>
                <input type="text" class="form-control" id="UserAccount" name="UserAccount" placeholder="請輸入帳號" required>
            </div>

            <div class="form-group">
                <label for="Password">密碼</label>
                <input type="password" class="form-control" id="pwd" name="pwd" placeholder="請輸入密碼" required>
            </div>

            <div class="form-group">
                <label for="Email">電子郵件</label>
                <input type="email" class="form-control" id="Email" name="Email" placeholder="請輸入電子郵件" required>
            </div>

            <button type="submit" class="btn btn-primary btn-block">註冊</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>
</body>
</html>